.todoForm
    margin-top 32px

    .items
        display grid
        grid-template-columns 1fr 150px
        background #fff
        padding 20px
        border solid 1px $border_color
        border-radius(3px)

        > div
            relative left top

            input[ type = "text" ]
                width 100%
                height 40px
                font-size 13px
                border none

                &:focus
                    outline 0
            
        .category
            background $bg_color
            font-size 13px
            font-weight 600
            cursor pointer
            relative left top

            .selected
                app_flex()
                size(100%)

            .dropdown
                width 100%
                absolute left top 100%
                background #fff
                border solid 1px $border_color
                border-top none

                span
                    app_flex( row, center, space-between )
                    padding 10px
                    font-size 12px
                    font-weight 400

            em
                margin-left 5px


.todolist
    display grid
    grid-template-columns repeat( 3, 1fr )
    grid-gap 15px
    align-items flex-start
    margin-top 32px

    > .item
        app_flex( row, center, space-between );
        background #fff
        padding 14px
        font-size 13px
        border solid 1px $border_color
        border-radius(3px)
        relative left top

        .title
            flex 1

            .category
                display block
                margin-top 6px
                font-size 9px
                font-style italic
                color $danger_color

                em
                    margin-left 4px
                    font-size 11px
                    cursor pointer
            
            select
                margin-top 10px
                padding 4px
                border solid 1px #ddd
                border-radius(4px)
                font-size 10px
                font-weight 600

        .remove
            flex 0 0 15px
            height 15px
            app_flex()
            background $danger_color
            font-size 12px
            border-radius(100%)
            color #fff
            font-size 10px
            cursor pointer


.todolist-categories
    app_flex()
    margin-top 32px

    span
        background #fff
        padding 10px
        margin-left 10px
        border solid 1px $border_color
        font-size 13px
        border-radius(4px)
        cursor pointer

        &.active
            background $bg_color
            font-weight 600

        &:first-child
            margin-left 0


.add_todo_button
    app_flex()
    size(25px)
    absolute right 20px top 6px
    background $danger_color
    color #ffffff
    font-size 14px
    border-radius(100%)
    cursor pointer